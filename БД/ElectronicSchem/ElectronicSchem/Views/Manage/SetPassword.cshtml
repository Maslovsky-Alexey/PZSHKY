@model ElectronicSchem.Models.SetPasswordViewModel
@using ElectronicSchem.Properties

@{
    ViewBag.Title = "Create Password";
}

<h2>@(ViewBag.Languages == "Ru" ? ResourcesRu.CreatePassword : ResourcesEn.CreatePassword)</h2>

@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>@(ViewBag.Languages == "Ru" ? ResourcesRu.CreateLocalLogin : ResourcesEn.CreateLocalLogin)</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @(ViewBag.Languages == "Ru" ? ResourcesRu.NewPassword : ResourcesEn.NewPassword)
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @(ViewBag.Languages == "Ru" ? ResourcesRu.ConfirmNewPassword : ResourcesEn.ConfirmNewPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="@(ViewBag.Languages == "Ru" ? ResourcesRu.SetPassword : ResourcesEn.SetPassword)" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}