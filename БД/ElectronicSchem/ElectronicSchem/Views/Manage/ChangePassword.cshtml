@model ElectronicSchem.Models.ChangePasswordViewModel
@using ElectronicSchem.Properties

@{
    ViewBag.Title = "Change Password";
}

<h2>@(ViewBag.Languages == "Ru" ? ResourcesRu.ChangePassword : ResourcesEn.ChangePassword)</h2>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@(ViewBag.Languages == "Ru" ? ResourcesRu.ChangePasswordForm : ResourcesEn.ChangePasswordForm)</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
       
        <div class="col-md-10">
            @(ViewBag.Languages == "Ru" ? ResourcesRu.CurrentPassword : ResourcesEn.CurrentPassword)
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
    
        <div class="col-md-10">
            @(ViewBag.Languages == "Ru" ? ResourcesRu.NewPassword : ResourcesEn.NewPassword)
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
      
        <div class="col-md-10">
            @(ViewBag.Languages == "Ru" ? ResourcesRu.ConfirmNewPassword : ResourcesEn.ConfirmNewPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="@(ViewBag.Languages == "Ru" ? ResourcesRu.ChangePassword : ResourcesEn.ChangePassword)" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}