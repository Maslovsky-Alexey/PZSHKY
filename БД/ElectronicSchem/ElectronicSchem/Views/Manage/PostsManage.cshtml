@using ElectronicSchem.Models.ElectronicSchemModels.Posts

@{

    <div class="content">
            <div class="row post-line" ng-repeat="post in posts">
                <div class="col-sm-10">
                    <a href="~/Posts?id={{post.id}}" class="title">{{post.title}}</a>
                    <br />
                    <div class="discription">{{post.discription}}</div> 
                </div>
                <div class="col-sm-2">
                    <div class="username">{{post.username}}</div>
                    <div class="date">{{post.date}}</div>     
                   @if ((!ViewBag.isGust && !ViewBag.UserMute) || ViewBag.Admin)
                   {
                        <a href="~/Posts/MangePost?id={{post.id}}" class="manage-posts-btn"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        <i class="fa fa-trash manage-posts-btn right-btn" aria-hidden="true" ng-click="removePost(post.id)"></i>
                   }
                </div>
            </div>
    </div>

}
